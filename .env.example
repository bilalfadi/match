# JWT secret for admin authentication (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Apne server par: site ka full URL (canonical, sitemap, OG). Production mein zaroor set karo.
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Port (optional). Default Next.js 3000. Apne server par: PORT=3001 ya nginx ke liye 3000
# PORT=3000

# Optional: for first-time admin creation via /api/auth/seed (no body)
# ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD=your-secure-password

# Matches sync: URL(s) of your site's JSON API (direct waha sy uthao).
# Can be comma-separated for multiple sites (e.g., 5 sites: url1,url2,url3,url4,url5)
# Response: { "matches": [ { "homeTeam", "awayTeam", "homeLogo?", "awayLogo?", "streamUrl", "matchTime", "status?", "homeScore?", "awayScore?" } ] }
# Or direct array: [ { "homeTeam", "awayTeam", ... } ]
# Only matches with non-empty streamUrl are shown.
# SYNC_SOURCE_URL=https://yoursite.com/api/matches.json
